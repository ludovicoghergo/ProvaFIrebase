<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="73dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/loign_bt"
            android:layout_width="221dp"
            android:layout_height="38dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white"
            android:onClick="signInGoogle"
            android:text="Login with Google"
            android:textColor="#090909"
            app:layout_constraintBottom_toTopOf="@+id/gust_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/gust_bt"
            android:layout_width="221dp"
            android:layout_height="38dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="@color/white"
            android:onClick="skipLogin"
            android:text="Join as guest"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="347dp"
            android:layout_height="56dp"
            android:layout_marginTop="36dp"
            android:fontFamily="cursive"
            android:text="Join our community now! "
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="345dp"
            android:layout_height="85dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-light"
            android:text="Buddy Split is the new tool to help you and your team to track your invoices. You can create groups,invoices and administrate as you wish!"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>