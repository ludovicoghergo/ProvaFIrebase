<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    tools:context=".invoicesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="294dp"
        tools:context=".invoicesFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleSpesa"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_marginStart="1dp"
            android:onClick="modificaSpesa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:text="User"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:text="Paid"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/textView14"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:text="To be paid"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/newDebt_txt"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical"
            android:text="new Debt"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newPay_txt" />

        <TextView
            android:id="@+id/newPay_txt"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"

            android:layout_marginBottom="32dp"
            android:gravity="center_vertical"
            android:text="new Payment"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView14" />

        <TextView
            android:id="@+id/sharedInvoice_txt"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="56dp"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical"
            android:text="Shared Invoice"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/newDebt_txt" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/baseline_add_shopping_cart_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/newDebt_txt" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/baseline_monetization_on_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/baseline_emoji_people_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sharedInvoice_txt" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>